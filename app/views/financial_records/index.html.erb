<div class="dashboard_form-inner_section">
  <div class="form_header_cover"><h1>Financial Records</h1></div>
  <div class="form_cover margin_bottom_30px">
    <%= simple_form_for :financial_records, url: import_financial_records_path, html: { multipart: true } do |f| %>

      <div class="form-inputs">
        <%= f.input :file, as: :file, label: 'Choose File' %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Import Excel File" %>
      </div>
    <% end %>
  </div>

  <div class="form_info_cover">
    <div class="form_info_link_cover margin_bottom_15px"><%= link_to "Export to Excel", export_financial_records_path(format: :xlsx) %></div>
    <div class="form_info_table_cover">
      <table>
        <thead>
        <tr>
          <th>Date</th>
          <th>Description</th>
          <th>Amount</th>
        </tr>
        </thead>
        <tbody>
        <% @financial_records.each do |record| %>
          <tr>
            <td><%= record.date %></td>
            <td><%= record.description %></td>
            <td><%= record.amount %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>




<div class="original_content hide">
  <%= form_with url: import_financial_records_path, local: true, multipart: true do %>
    <div class="field">
      <%= label_tag :file %>
      <%= file_field_tag :file %>
    </div>
    <div class="actions">
      <%= submit_tag "Import Excel File" %>
    </div>
  <% end %>
</div>
